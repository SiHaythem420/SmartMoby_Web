{% extends 'back_base.html.twig' %}

{% block title %}Vehicle Management{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Vehicle List</h3>
            <div class="card-tools">
                <a href="{{ path('vehicule_new') }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Add New Vehicle
                </a>
            </div>
        </div>
        <div class="card-body">
            {% if vehicules is empty %}
                <div class="alert alert-info">
                    No vehicles found. Click the "Add New Vehicle" button to create one.
                </div>
            {% else %}
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Type</th>
                            <th>Capacity</th>
                            <th>Status</th>
                            <th>Available</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for vehicule in vehicules %}
                            <tr>
                                <td>{{ vehicule.id }}</td>
                                <td>{{ vehicule.type }}</td>
                                <td>{{ vehicule.capacite }}</td>
                                <td>{{ vehicule.statut }}</td>
                                <td>{{ vehicule.dispo ? 'Yes' : 'No' }}</td>
                                <td>
                                    <a href="{{ path('vehicule_show', { id: vehicule.id }) }}" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a href="{{ path('vehicule_edit', { id: vehicule.id }) }}" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form method="post" action="{{ path('vehicule_delete', { id: vehicule.id }) }}" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ vehicule.id) }}">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %} 