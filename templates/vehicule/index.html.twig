{% extends 'base.html.twig' %}

{% block title %}Vehicles{% endblock %}

{% block body %}
    <h5 class="mb-0"><strong>Vehicles</strong></h5>
    <span class="text-secondary">Dashboard <i class="fa fa-angle-right"></i> Vehicles</span>

    <div class="row mt-3">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="mb-0">Vehicle List</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Type</th>
                                    <th>Capacity</th>
                                    <th>Status</th>
                                    <th>Availability</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for vehicule in vehicules %}
                                    <tr>
                                        <td>{{ vehicule.id }}</td>
                                        <td>{{ vehicule.type }}</td>
                                        <td>{{ vehicule.capacite }}</td>
                                        <td>{{ vehicule.statut }}</td>
                                        <td>{{ vehicule.dispo ? 'Available' : 'Unavailable' }}</td>
                                        <td>
                                            <a href="{{ path('vehicule_show', {'id': vehicule.id}) }}" class="btn btn-sm btn-info">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                            <a href="{{ path('vehicule_edit', {'id': vehicule.id}) }}" class="btn btn-sm btn-warning">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('vehicule_delete', {'id': vehicule.id}) }}" style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this vehicle?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ vehicule.id) }}">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6">No vehicles found</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <a href="{{ path('vehicule_new') }}" class="btn btn-primary">
                <i class="fa fa-plus"></i> Add New Vehicle
            </a>
        </div>
    </div>
{% endblock %} 