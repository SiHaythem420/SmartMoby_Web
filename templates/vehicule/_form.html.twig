{% form_theme form 'bootstrap_5_layout.html.twig' %}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-car me-2"></i> {{ form_title|default('Vehicle Information') }}
                    </h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(form.type, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': 'Enter vehicle type'
                                },
                                'label': 'Vehicle Type',
                                'label_attr': {'class': 'form-label fw-bold text-primary'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.capacite, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': 'Enter capacity',
                                    'min': '1'
                                },
                                'label': 'Capacity',
                                'label_attr': {'class': 'form-label fw-bold text-primary'}
                            }) }}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(form.statut, {
                                'attr': {
                                    'class': 'form-select form-select-lg'
                                },
                                'label': 'Status',
                                'label_attr': {'class': 'form-label fw-bold text-primary'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            <div class="form-check form-switch mt-4">
                                {{ form_row(form.dispo, {
                                    'attr': {
                                        'class': 'form-check-input',
                                        'role': 'switch'
                                    },
                                    'label': 'Available',
                                    'label_attr': {'class': 'form-check-label fw-bold text-primary'}
                                }) }}
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            {{ form_row(form.image, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'accept': 'image/*'
                                },
                                'label': 'Vehicle Image',
                                'label_attr': {'class': 'form-label fw-bold text-primary'}
                            }) }}
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a href="{{ path('vehicule_index') }}" class="btn btn-outline-secondary btn-lg me-md-2">
                            <i class="fas fa-arrow-left me-2"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i> {{ button_label|default('Save') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        border: none;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
    .card-header {
        border-radius: 20px 20px 0 0 !important;
        background: linear-gradient(45deg, #2196F3, #1976D2);
    }
    .form-control, .form-select {
        border-radius: 12px;
        padding: 12px;
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
    }
    .form-control:focus, .form-select:focus {
        border-color: #2196F3;
        box-shadow: 0 0 0 0.25rem rgba(33, 150, 243, 0.25);
    }
    .btn {
        border-radius: 12px;
        padding: 12px 24px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    .btn-primary {
        background: linear-gradient(45deg, #2196F3, #1976D2);
        border: none;
    }
    .btn-primary:hover {
        background: linear-gradient(45deg, #1976D2, #1565C0);
        transform: translateY(-2px);
    }
    .form-label {
        color: #2196F3;
        font-size: 1.1rem;
    }
    .form-check-input:checked {
        background-color: #2196F3;
        border-color: #2196F3;
    }
</style> 