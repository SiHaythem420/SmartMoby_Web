{% extends 'back_base.html.twig' %}

{% block title %}Vehicle Details{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Vehicle Details</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th>ID</th>
                                    <td>{{ vehicule.id }}</td>
                                </tr>
                                <tr>
                                    <th>Type</th>
                                    <td>{{ vehicule.type }}</td>
                                </tr>
                                <tr>
                                    <th>Capacity</th>
                                    <td>{{ vehicule.capacite }}</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>{{ vehicule.statut }}</td>
                                </tr>
                                <tr>
                                    <th>Available</th>
                                    <td>{{ vehicule.dispo ? 'Yes' : 'No' }}</td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="mt-3">
                            <a href="{{ path('vehicule_edit', {'id': vehicule.id}) }}" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a href="{{ path('vehicule_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to list
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 