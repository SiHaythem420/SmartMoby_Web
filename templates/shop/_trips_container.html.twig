{% for trajet in trajets %}
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">{{ trajet.pointDepart }} → {{ trajet.pointArrivee }}</h5>
                    <span class="badge bg-primary">{{ trajet.vehicule.type }}</span>
                </div>
                <div class="trip-details">
                    <p class="mb-2">
                        <i class="fas fa-clock"></i> 
                        {{ trajet.dateDepart|date('d/m/Y H:i') }}
                    </p>
                    <p class="mb-2">
                        <i class="fas fa-road"></i> 
                        {{ trajet.distance }} km
                    </p>
                    <p class="mb-2">
                        <i class="fas fa-euro-sign"></i> 
                        {{ trajet.prix }}€
                    </p>
                    <p class="mb-2">
                        <i class="fas fa-user"></i> 
                        {{ trajet.conducteur.nom }} {{ trajet.conducteur.prenom }}
                    </p>
                </div>
                <div class="mt-3">
                    <a href="{{ path('app_shop_detail', {'id': trajet.id}) }}" class="btn btn-primary w-100">
                        Voir les détails
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endfor %}

{% if trajets.haveToPaginate is defined and trajets.haveToPaginate %}
    <div class="col-12">
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(trajets) }}
        </div>
    </div>
{% endif %}

<script>
$(document).ready(function() {
    // Gestion des filtres
    $('.filter-form').on('submit', function(e) {
        e.preventDefault();
        loadTrips();
    });

    // Gestion de la pagination
    $(document).on('click', '.pagination a', function(e) {
        e.preventDefault();
        loadTrips($(this).attr('href'));
    });

    function loadTrips(url = null) {
        url = url || window.location.href;
        $.ajax({
            url: url,
            type: 'GET',
            success: function(response) {
                $('#trips-container').html(response);
            }
        });
    }
});
</script> 