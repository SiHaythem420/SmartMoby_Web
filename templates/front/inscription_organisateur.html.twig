<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
	{% block css %}
	<link rel="stylesheet" href="{{ asset('css/login.css') }}">
	{% endblock %}
</head>
<body>
    
<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form action="{{ path('inscription_organisateur') }}" method="post">
    		<h1>Compléter l'inscription</h1>
    		{{ form_start(form) }}
        		    {{ form_widget(form.num_badge, {'attr': {'placeholder': 'Numéro de badge', 'class': 'form-input'}}) }} 
                    <div class="form-error">
        			    {{ form_errors(form.num_badge) }}
    			    </div>

    
                <button type="submit">Confirmer</button>
			
        		
        		
    		{{ form_end(form) }}
		</form>
	</div>
	
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Juste Une Chose </h1>
				<p>Entrez votre département </p>
				
			</div>
			
		</div>
	</div>
</div>

{% block js %}
<script src="{{ asset('js/login.js') }}"></script>
{% endblock %}
</body>
</html>