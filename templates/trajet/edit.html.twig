{% extends 'back_base.html.twig' %}

{% block title %}Edit Trip{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Edit Trip</h3>
            <div class="card-tools">
                <a href="{{ path('trajet_index') }}" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.vehicule) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.pointDepart) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.pointArrivee) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.distance) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.dateDepart) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.dateArrivee) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.prix) }}
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %} 