<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Edit Trip</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-12">
                <div class="btn-group" role="group">
                    <a href="{{ path('vehicule_index') }}" class="btn btn-outline-primary">
                        <i class="fa fa-car"></i> Vehicles
                    </a>
                    <a href="{{ path('trajet_index') }}" class="btn btn-primary active">
                        <i class="fa fa-route"></i> Trips
                    </a>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Edit Trip</h3>
                <div class="card-tools">
                    <a href="{{ path('trajet_index') }}" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.vehicule) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.pointDepart) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.pointArrivee) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.distance) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.dateDepart) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.dateArrivee) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.prix) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 