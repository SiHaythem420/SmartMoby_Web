<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Trips</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-12">
                <div class="btn-group" role="group">
                    <a href="{{ path('vehicule_index') }}" class="btn btn-outline-primary">
                        <i class="fa fa-car"></i> Vehicles
                    </a>
                    <a href="{{ path('trajet_index') }}" class="btn btn-primary active">
                        <i class="fa fa-route"></i> Trips
                    </a>
                </div>
            </div>
        </div>

        <h5 class="mb-0"><strong>Trips</strong></h5>
        <span class="text-secondary">Dashboard <i class="fa fa-angle-right"></i> Trips</span>

        <div class="row mt-3">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h6 class="mb-0">Trip List</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Departure</th>
                                        <th>Destination</th>
                                        <th>Departure Date</th>
                                        <th>Arrival Date</th>
                                        <th>Vehicle</th>
                                        <th>Distance</th>
                                        <th>Price</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for trajet in trajets %}
                                        <tr>
                                            <td>{{ trajet.id }}</td>
                                            <td>{{ trajet.pointDepart }}</td>
                                            <td>{{ trajet.pointArrivee }}</td>
                                            <td>{{ trajet.dateDepart|date('Y-m-d H:i') }}</td>
                                            <td>{{ trajet.dateArrivee|date('Y-m-d H:i') }}</td>
                                            <td>{{ trajet.vehicule.type }}</td>
                                            <td>{{ trajet.distance }} km</td>
                                            <td>{{ trajet.prix }} TND</td>
                                            <td>
                                                <a href="{{ path('trajet_show', {'id': trajet.id}) }}" class="btn btn-sm btn-info">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                <a href="{{ path('trajet_edit', {'id': trajet.id}) }}" class="btn btn-sm btn-warning">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <form method="post" action="{{ path('trajet_delete', {'id': trajet.id}) }}" style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this trip?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trajet.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="9">No trips found</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <a href="{{ path('trajet_new') }}" class="btn btn-primary">
                    <i class="fa fa-plus"></i> Add New Trip
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 