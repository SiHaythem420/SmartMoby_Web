                {% if trajets is defined and trajets|length > 0 %}
                    {% set itemsPerPage = 3 %}
                    {% set totalPages = (trajets|length / itemsPerPage)|round(0, 'ceil') %}
                    {% set currentPage = app.request.query.getInt('page', 1) %}
                    {% set start = (currentPage - 1) * itemsPerPage %}
                    
