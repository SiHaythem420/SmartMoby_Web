{# templates/produit/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block content %}
<div class="container-fluid mt-4">
    <h1>Liste des produits</h1>

    {# — barre de recherche — #}
    <form method="get" action="{{ path('produit_index') }}" class="mb-3 row g-2">
        <div class="col-auto">
            <input 
                type="text" 
                name="search" 
                value="{{ app.request.query.get('search') }}" 
                class="form-control" 
                placeholder="Rechercher un produit…"
            >
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-search"></i> Rechercher
            </button>
        </div>
        {% if app.request.query.get('search') %}
            <div class="col-auto">
                <a href="{{ path('produit_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Effacer
                </a>
            </div>
        {% endif %}
    </form>

    <div class="mb-3">
        <a href="{{ path('produit_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Créer un nouveau produit
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>…</thead>
                <tbody>
                    {% for produit in produits %}
                    <tr>
                        <td>{{ produit.idproduit }}</td>
                        <td>{{ produit.nom }}</td>
                        <td>{{ produit.type }}</td>
                        <td>{{ produit.prix }} €</td>
                        <td>
                            {% for s in produit.services %}
                                <span class="badge bg-secondary">{{ s.nom }}</span>
                            {% else %}
                                <em>Aucun</em>
                            {% endfor %}
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('produit_show',    {'id': produit.idproduit}) }}" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a 
  href="{{ path('produit_add_to_cart', {id: produit.idproduit}) }}" 
  class="btn btn-sm btn-success" 
  title="Ajouter au panier"
>
  <i class="fas fa-shopping-cart"></i>
</a>
                                <a href="{{ path('produit_edit',    {'id': produit.idproduit}) }}" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form
                                    method="post"
                                    action="{{ path('produit_delete', {'id': produit.idproduit}) }}"
                                    style="display:inline;"
                                    onsubmit="return confirm('Supprimer ce produit ?');"
                                >
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.idproduit) }}">
                                    <button class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucun produit trouvé</td>
                    </tr>
                {% endfor %}
                <div class="mt-3">
                    <a 
                        href="{{ path('produit_pdf', { search: app.request.query.get('search') }) }}" 
                        class="btn btn-danger"
                    >
                        <i class="fas fa-file-pdf"></i> Télécharger en PDF
                    </a>
                    <a 
            href="{{ path('produit_chatbot') }}" 
            class="btn btn-secondary"
        >
            <i class="fas fa-robot"></i> Chatbot
        </a>
        <a href="{{ path('produit_cart') }}" class="btn btn-secondary ms-2">
            <i class="fas fa-shopping-cart"></i> Panier
          </a>
                </div>                                                                                                                                                              
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
